---
import Layout from "../layouts/Layout.astro"
import { CakeTopperImgs } from "../components/CakeTopperImgs"
---

<Layout>
  <div
    class="flex min-h-screen flex-col justify-between py-4 sm:py-6 lg:py-8 mb-10"
  >
    <main class="mb-auto">
      <div class="my-8 sm:my-12">
        <h2
          class="mb-4 text-center text-2xl font-semibold text-black md:mb-6 md:text-3xl lg:text-4xl"
        >
          Cake Toppers
        </h2>
        <p class="mx-auto max-w-screen-md text-center text-gray-600 md:text-lg">
          Galerija slika već rađenih toppera
        </p>
      </div>
      <CakeTopperImgs client:only />
    </main>
  </div>
</Layout>
